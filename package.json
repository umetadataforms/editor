{
  "name": "umetadataformseditor",
  "productName": "uMetadataFormsEditor",
  "appId": "github.com.umetadataforms.editor",
  "version": "0.0.1",
  "description": "Prototype desktop editor for completing health data metadata documents.",
  "homepage": "./",
  "license": "MIT",
  "author": {
    "name": "Artur Akbarov",
    "email": "a.akbarov@imperial.ac.uk"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/umetadataforms/editor.git"
  },
  "main": "electron/main.ts",
  "build": {
    "extends": null,
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "build/**",
      "electron/**"
    ],
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Utility",
      "icon": "icons"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icons/uMFE.ico"
    },
    "nsis": {
      "oneClick": false,
      "license": "assets/license-nsis-installer.txt"
    },
    "mac": {
      "notarize": false,
      "gatekeeperAssess": false,
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "category": "public.app-category.productivity",
      "icon": "icons/uMFE.icns",
      "type": "distribution"
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "cross-env ELECTRON_START_URL=http://localhost:3000 electron .",
    "dist": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "5.6.1",
    "@rjsf/antd": "5.24.12",
    "@rjsf/core": "5.24.12",
    "@rjsf/utils": "5.24.12",
    "@rjsf/validator-ajv8": "5.24.12",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@tiptap/extension-bullet-list": "^3.10.7",
    "@tiptap/extension-code": "^3.10.7",
    "@tiptap/extension-heading": "^3.10.7",
    "@tiptap/extension-link": "^3.10.7",
    "@tiptap/extension-list-item": "^3.10.7",
    "@tiptap/extension-table": "^3.10.7",
    "@tiptap/extension-table-cell": "^3.10.7",
    "@tiptap/extension-table-header": "^3.10.7",
    "@tiptap/extension-table-row": "^3.10.7",
    "@tiptap/extension-underline": "^3.10.7",
    "@tiptap/react": "^3.10.7",
    "@tiptap/starter-kit": "^3.10.7",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "antd": "5.29.0",
    "dompurify": "^3.3.0",
    "lodash": "^4.17.21",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-resizable": "^3.0.5",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/react-resizable": "^3.0.8",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "wait-on": "^9.0.3"
  }
}
